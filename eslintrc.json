{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react"],
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["*.spec.js"],
      "env": {
        "mocha": true
      },
      "plugins": ["mocha"]
    },
    {
      "files": ["index.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["test/*.js"],
      "globals": {
        "artifacts": false,
        "contract": false,
        "beforeEach": false,
        "before": false,
        "it": false,
        "web3": false,
        "describe": false
      }
    },
    {
      "files": ["src/*.js*"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["migrations/*.js"],
      "globals": {
        "artifacts": "readonly"
      }
    }
  ],
  "root": true,
  "rules": {
    "react/react-in-jsx-scope": 0,
    "arrow-body-style": ["warn", "never"],
    "arrow-parens": ["warn", "as-needed"],
    "complexity": ["warn", 10],
    "consistent-return": "error",
    "max-len": [
      "warn",
      { "code": 120, "ignoreComments": false, "tabWidth": 4 }
    ],
    "max-params": ["warn", 4],
    "no-else-return": "error",
    "no-multi-assign": "error",
    "no-param-reassign": "error",
    "no-shadow": [
      "error",
      { "allow": ["err"], "builtinGlobals": true, "hoist": "functions" }
    ],
    "no-unused-vars": [
      "error",
      { "args": "after-used", "ignoreRestSiblings": true, "vars": "all" }
    ],
    "no-use-before-define": [
      "error",
      { "classes": true, "functions": true, "variables": true }
    ],
    "no-useless-concat": "error",
    "no-var": "error",
    "prefer-template": "error",
    "promise/catch-or-return": [
      "error",
      { "allowFinally": true, "allowThen": true }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "jsdoc/require-jsdoc": "off"
  }
}
